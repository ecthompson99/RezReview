<% layout('layouts/boilerplate') %>
    <div id="cluster-map" ></div>


<h1 class="mb-3">All Rental Listings</h1>

    <% for (let listing of allListings){ %>
        <div class="card mb-3">
            <div class="row">
                <% if (listing.images.length){ %> 
                    <div class="col-md-4">
                        <img src="<%=listing.images[0].url%>" class="img-fluid" alt="">
                    </div>
                    <% } else{ %>
                        <div class="col-md-4">
                            <img src="https://res.cloudinary.com/deqap2btv/image/upload/v1642732689/YelpHousing/no_image_pdbwxy.png" class="img-fluid" alt="">
                        </div>
                        <% } %> 
               
                <div class="card-body col-8">
                    <h5 class="card-title">
                        <%= listing.streetNumber %>
                            <%= listing.streetName %>
                    </h5>


                    <p class="card-text ">
                        Location: <%= listing.city %>, <%= listing.province %>
                    </p>
                    <p class="card-text text-muted">
                        Price: <%= listing.price %>/month
                    </p>
                    <a href="/listings/<%= listing._id %> " class="btn btn-primary">View Details</a>
                </div>
            </div>

        </div>


        <% } %>

        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
            const listings = <%-JSON.stringify({features: allListings})%>;
        </script>
        <script src="/javascripts/clusterMap.js"></script>